[flake8]
max-line-length = 122
extend-ignore = E203
exclude = '''
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist
'''
max-complexity = 22
in-place=true
remove-all-unused-imports=true
remove-unused-variable=true
select = B,C,E,F,W,T4,B9
ignore = E203, E266, E501, W503, F403, F401
